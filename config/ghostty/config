# Ghostty configuration
# https://ghostty.org/docs/config

# Restore previous window/split state on launch
window-save-state = always

# Disable paste confirmation popup
clipboard-paste-protection = false

# Start via login shell (loads env like PATH, etc.)
command = /bin/zsh -l

# Split keybindings
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+ctrl+left=goto_split:left
keybind = cmd+ctrl+right=goto_split:right
keybind = cmd+ctrl+up=goto_split:up
keybind = cmd+ctrl+down=goto_split:down
keybind = cmd+ctrl+equal=equalize_splits
